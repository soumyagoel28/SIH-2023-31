<% layout('layout/boilerPlate') %>
<main style="display:block;"> 
<h1>Check out your Favourite Courses</h1>

<div class="m-4" style="display: flex;justify-content: center;">
    <a class="btn btn-primary" href="/campground/new" style="text-decoration: none;color: rgb(255, 255, 255); ">Add a Course !!</a>
</div>

        <% for(let i of camps){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= i.image %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= i.title %> </h5>
                            <p class="card-text"><%= i.description%></p>
                            <p class="card-text text-muted"><%= i.location %></p>
                            <p class="card-text text-success">&#8377; <%= i.price%></p>

                            <a class="btn btn-primary" href="/campgrounds/<%= i._id%>">View <%=i.title%></a>
                        </div>
                    </div>
                </div>
            </div>
 
            <% }%>
        </main>