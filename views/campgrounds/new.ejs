<% layout('layout/boilerPlate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="name">Name of Campground  </label>
                <input type="text" class="form-control" name="campground[title]" placeholder="name" id="name" required>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Enter Location </label>
                <input type="text" class="form-control" name="campground[location]" placeholder="location" id="Location" required>
            </div>
        <div class="mb-3">
            <label for="Price" class="form-label">Price </label>
            <div class="input-group mb-3">
                <span class="input-group-text">&#8377;</span>
                <input type="text" id="Price" class="form-control" aria-label="Amount (in Rupees)" name="campground[price]" required>
                <span class="input-group-text">.00</span>
            </div>
        </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Url</label>
                <input type="text" class="form-control" name="campground[image]" placeholder="image" id="image" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" name="campground[description]" placeholder="description" id="description" required></textarea>
            </div>
            <div class="mb-3 ">
                <input type="submit" class="btn btn-success">
            </div>    
        </form>
    </div>
</div>

<script>
    const forms = document.querySelectorAll(".validated-form");
    Array.from(forms)
</script>


